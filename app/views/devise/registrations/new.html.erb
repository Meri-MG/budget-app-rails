<nav class="flex justify-center align-center space-x-4 bg-[#3671b9] text-white">
  <ul class="w-full flex flex-row justify-between p-5">
    <li>
      <%= link_to '', unauthenticated_root_path, class: "text-xl fa-solid fa-arrow-left" %>
    </li>
    <li>
      <h1 class="text-xl text-center uppercase">Register</h1>
    </li>
    <li>
      <i class="fa-solid fa-circle-dollar"></i>
    </li>
  </ul>
</nav>

<div class="min-h-screen flex justify-center items-center bg-white mt-5">
  <div class="p-10 border-[1px] -mt-10 border-slate-200 rounded-md flex flex-col items-center space-y-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field py-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Enter your name", class: "p-3 border-[1px] border-slate-500 rounded-sm w-80 focus:outline-none" %>
      </div>

      <div class="field py-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", class: "p-3 border-[1px] border-slate-500 rounded-sm w-80 focus:outline-none" %>
      </div>

      <div class="field py-3">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter your password", class: "p-3 border-[1px] border-slate-500 rounded-sm w-80 focus:outline-none" %>
      </div>

      <div class="field py-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "Confirm your password", class: "p-3 border-[1px] border-slate-500 rounded-sm w-80 focus:outline-none" %>
      </div>

      <div class="actions py-3">
        <%= f.submit "Sign up", class: "w-full border-blue-900 hover:border-[#003087] hover:border-[2px] border-[1px] rounded-3xl p-3 text-[#0070ba] font-bold transition duration-200 text-center focus:outline-none" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
