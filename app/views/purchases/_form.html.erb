<%= link_to '< Back', root_path %>
<% if @purchase.errors.any? %>
<h2>The following errors prevented the transaction from being saved</h2>
<ul>
  <% @purchase.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for :purchase, url: purchases_path do |f| %>
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name, placeholder: 'Enter Transaction Name' %>
</p>

<p> 
  <%= f.label :amount %><br />
  <%= f.number_field :amount, step: :any, placeholder: 'Enter Amount' %>
</p>

<p>
  <%= f.label :category_id %><br />
  <%= f.collection_select :category_ids, current_user.categories.order(:name), :id, :name, {}, prompt: true %>
</p>

<p >
  <%= f.submit 'Save' %>
</p>
<% end %>

