<div id="<%= dom_id expense %>">
  <div class="flex justify-between align-center">
    <p class="text-gray-700 uppercase">
      <strong>Name:</strong>
      <%= expense.name %>
    </p>

    <p class="text-gray-700 uppercase">
      <strong>Amount: $</strong>
      <%= expense.amount %>
    </p>

    <div class="text-gray-700 uppercase">
      <strong>Categories:</strong>
      <% expense.categories.each do |category| %>
        <p><%= category.name %></p>
      <% end %>
    </div>

    <div class="text-sm">
      <ul class="flex items-center mt-2">
      <% if can? :destroy, @expense %>
        <li class="ml-5"><%= button_to 'Delete', expense, class: 'text-red-400', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this transaction?" }} %></li>
      <% else %>
        <li class="ml-5"><%= button_to 'Delete', expense, class: 'text-red-400 opacity-50 cursor-not-allowed', disabled: true, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this transaction?" }} %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
